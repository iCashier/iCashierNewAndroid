<?xml version="1.0" encoding="utf-8"?>
<layout>
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layoutDirection="locale"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:id="@+id/clParentLayout"
            tools:context=".activity.ForgotPasswordActivity">
            <FrameLayout
                android:layout_width="@dimen/_55dp"
                android:layout_height="@dimen/_55dp"
                app:layout_constraintTop_toTopOf="@+id/cardHeader"
                app:layout_constraintBottom_toBottomOf="@id/cardHeader"
                android:layout_marginStart="@dimen/_40dp"
                app:layout_constraintStart_toStartOf="parent"
                android:elevation="@dimen/_5dp"
                android:id="@+id/flBack"
                android:background="@drawable/bg_circle_orange">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_back"
                    android:layout_gravity="center"
                    />
            </FrameLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45dp"
                app:cardCornerRadius="@dimen/_25dp"
                android:layout_marginStart="@dimen/_50dp"
                android:layout_marginEnd="@dimen/_50dp"
                android:layout_marginTop="@dimen/_20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/cardHeader"
                android:elevation="@dimen/_5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forgot_pass_header"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_20sp"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="@dimen/_60dp"
                    android:fontFamily="@font/cairo_semibold"
                    />
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="@dimen/_280dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardHeader"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_email"
                    android:layout_marginTop="@dimen/_40dp"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_your_registered_email_id"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_20sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/cairo_semibold"
                    android:layout_marginTop="@dimen/_20dp"
                    />

                <EditText
                    android:layout_width="@dimen/_280dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:background="@drawable/bg_field"
                    android:hint="@string/email_id"
                    android:paddingStart="@dimen/_20dp"
                    android:textAlignment="viewStart"
                    android:id="@+id/etEmail"
                    android:textColor="@color/textColor"
                    android:maxLines="1"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/cairo_regular"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/a_password_reset_link_will_be_sent_to_registered_email_address"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_16sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/cairo_light"
                    android:layout_marginTop="@dimen/_30dp"
                    />

                <Button
                    android:layout_width="@dimen/_120dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_btn_red"
                    android:layout_marginTop="@dimen/_30dp"
                    android:text="@string/submit"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_18sp"
                    android:elevation="@dimen/_5dp"
                    android:id="@+id/btnSubmit"
                    android:fontFamily="@font/cairo_semibold"
                    />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</layout>