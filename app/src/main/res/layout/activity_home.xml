<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/bgColorHome"
        android:layoutDirection="locale"
        android:id="@+id/clParentLayout"
        tools:context=".activity.HomeActivity">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:id="@+id/llDrawer"
            android:elevation="@dimen/_7dp"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical">

            <!--Expand part-->
            <android.support.constraint.ConstraintLayout
                android:layout_width="@dimen/_280dp"
                android:layout_height="wrap_content"
                android:id="@+id/clTimeExpand"
                android:visibility="gone"
                android:background="@color/colorBgTime">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_25sp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/cairo_bold"
                    android:layout_marginStart="@dimen/_10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="12"
                    android:id="@+id/tvDayExpand"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/tvDayExpand"
                    app:layout_constraintTop_toTopOf="@+id/tvDayExpand"
                    android:textColor="@color/colorBlack"
                    android:layout_marginStart="@dimen/_5dp"
                    android:id="@+id/tvMonthExpand"
                    android:text="JAN"
                    android:textSize="@dimen/_12sp"
                    android:fontFamily="@font/cairo_bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:layout_marginStart="@dimen/_5dp"
                    app:layout_constraintStart_toEndOf="@+id/tvDayExpand"
                    app:layout_constraintTop_toBottomOf="@+id/tvMonthExpand"
                    android:textSize="@dimen/_10sp"
                    android:fontFamily="@font/cairo_bold"
                    android:text="2018"
                    android:id="@+id/tvYearExpand"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:00"
                    android:fontFamily="@font/cairo_bold"
                    android:textSize="@dimen/_25sp"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintEnd_toStartOf="@+id/tvAmPmExpand"
                    android:id="@+id/tvTimeExpand"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvTimeExpand"
                    android:layout_marginTop="@dimen/_3dp"
                    android:paddingEnd="@dimen/_2dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:text="Am"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/cairo_bold"
                    android:textSize="@dimen/_12sp"
                    android:id="@+id/tvAmPmExpand"
                    />

            </android.support.constraint.ConstraintLayout>
            <!--Expand part end-->

            <!--Expand part-->
            <android.support.constraint.ConstraintLayout
                android:layout_width="@dimen/_280dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_30dp"
                android:visibility="gone"
                android:id="@+id/clUserExpand">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="@dimen/_65dp"
                    android:layout_height="@dimen/_68dp"
                    android:elevation="@dimen/_2dp"
                    android:layout_marginTop="@dimen/_10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_30dp">
                    <View
                        android:layout_width="@dimen/_15dp"
                        android:layout_height="@dimen/_15dp"
                        android:layout_margin="@dimen/_2dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@drawable/bg_online_selector"
                        android:id="@+id/viewOnlineExpanded"

                        />
                </android.support.constraint.ConstraintLayout>
                <LinearLayout
                    android:layout_width="@dimen/_70dp"
                    android:layout_height="@dimen/_70dp"
                    android:background="@drawable/bg_circle_green"
                    android:layout_marginTop="@dimen/_10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_30dp"
                    android:id="@+id/llImgUser"
                    android:padding="@dimen/_2dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imgUserExpand"
                        android:src="@drawable/icon_placeholder" />
                </LinearLayout>
                <FrameLayout
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp"
                    android:background="@drawable/bg_circle_red"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="@dimen/_18dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:id="@+id/flLogout"
                    android:elevation="@dimen/_3dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_logout"
                        />
                </FrameLayout>

                <TextView
                    android:layout_width="@dimen/_150dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/llImgUser"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/cairo_bold"
                    android:textSize="@dimen/_25sp"
                    android:text="IVAN"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginStart="@dimen/_10dp"
                    android:id="@+id/tvUserNameExpand"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/offline"
                    android:textAllCaps="true"
                    android:fontFamily="@font/cairo_regular"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14sp"
                    android:id="@+id/tvOnline"
                    app:layout_constraintStart_toStartOf="@id/tvUserNameExpand"
                    app:layout_constraintTop_toBottomOf="@+id/tvUserNameExpand"
                    />



                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvOnline"
                    app:layout_constraintBottom_toBottomOf="@+id/tvOnline"
                    android:checked="false"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:id="@+id/switchOnline"
                    android:theme="@style/CustomSwitch"/>
                <FrameLayout
                    android:layout_width="@dimen/_100dp"
                    android:layout_height="@dimen/_80dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvOnline"
                    app:layout_constraintBottom_toBottomOf="@+id/tvOnline"
                    android:id="@+id/llSwitch">

                </FrameLayout>

            </android.support.constraint.ConstraintLayout>
            <!--Expand part End-->

            <!--Collapsed part-->
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/clTimeCollapse"
                android:paddingBottom="@dimen/_5dp"
                android:background="@color/colorBgTime">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12  JAN"
                    android:paddingStart="@dimen/_5dp"
                    android:paddingEnd="@dimen/_5dp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/cairo_semibold"
                    android:textSize="@dimen/_12sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/tvDateCollapse"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:00"
                    android:fontFamily="@font/cairo_semibold"
                    android:textSize="@dimen/_12sp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginStart="@dimen/_5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/tvTimeCollapse"
                    app:layout_constraintTop_toBottomOf="@+id/tvDateCollapse"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/tvTimeCollapse"
                    app:layout_constraintTop_toTopOf="@+id/tvTimeCollapse"
                    android:paddingStart="@dimen/_2dp"
                    android:paddingEnd="@dimen/_2dp"
                    android:text="Am"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/cairo_semibold"
                    android:textSize="@dimen/_10sp"
                    android:id="@+id/tvAmPmCollapse"
                    />
            </android.support.constraint.ConstraintLayout>
            <!--Collapsed part end-->


            <!--Collapsed part-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llUserInfoCollapse"
                android:orientation="vertical">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_circle_green"
                    android:padding="@dimen/_1dp"
                    android:layout_marginTop="@dimen/_10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imgUserCollapse"
                        android:src="@drawable/icon_placeholder"/>
                    <View
                        android:layout_width="@dimen/_10dp"
                        android:layout_height="@dimen/_10dp"
                        android:background="@drawable/bg_online_selector"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="@dimen/_3dp"
                        android:id="@+id/viewOnlineCollapsed"
                        />
                </android.support.constraint.ConstraintLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IVAN"
                    android:textSize="@dimen/_12sp"
                    android:id="@+id/tvUserNameCollapse"
                    android:layout_gravity="center"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/cairo_semibold"
                    android:maxLength="4"
                    android:layout_marginTop="@dimen/_8dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_calculator"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5dp"
                    android:id="@+id/imgCalc"
                    />
            </LinearLayout>
            <!--Collapsed part End-->


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:scrollbars="none">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/llMenu"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40dp"
                        android:id="@+id/llMHome"
                        android:background="@drawable/bg_menu_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/_10dp"
                        android:paddingBottom="@dimen/_10dp">
                        <ImageView
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/imgHome"
                            android:src="@drawable/img_home_selector"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="@string/merchant_home"
                            android:id="@+id/tvMHome"
                            android:textColor="@drawable/text_selector"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/_10dp"
                            android:textSize="@dimen/_16sp"
                            android:visibility="gone"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40dp"
                        android:background="@drawable/bg_menu_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/_10dp"
                        android:paddingBottom="@dimen/_10dp"
                        android:id="@+id/llCashier">
                        <ImageView
                            android:layout_width="@dimen/_50dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:id="@+id/imgCashier"
                            android:src="@drawable/img_cashier_selector"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cashier"
                            android:id="@+id/tvCashier"
                            android:textColor="@drawable/text_selector"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_16sp"
                            android:maxLines="1"
                            android:layout_marginEnd="@dimen/_10dp"
                            android:visibility="gone"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40dp"
                        android:background="@drawable/bg_menu_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/_10dp"
                        android:paddingBottom="@dimen/_10dp"
                        android:id="@+id/llGenCode">
                        <ImageView
                            android:layout_width="@dimen/_50dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:id="@+id/imgCode"
                            android:src="@drawable/img_code_selector"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/generate_code"
                            android:textColor="@drawable/text_selector"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_16sp"
                            android:id="@+id/tvGenCode"
                            android:maxLines="1"
                            android:layout_marginEnd="@dimen/_10dp"
                            android:visibility="gone"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40dp"
                        android:background="@drawable/bg_menu_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/_10dp"
                        android:paddingBottom="@dimen/_10dp"
                        android:id="@+id/llItems">
                        <ImageView
                            android:layout_width="@dimen/_50dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:id="@+id/imgItems"
                            android:src="@drawable/img_item_selector"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/items"
                            android:textColor="@drawable/text_selector"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_16sp"
                            android:id="@+id/tvItems"
                            android:maxLines="1"
                            android:layout_marginEnd="@dimen/_10dp"
                            android:visibility="gone"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40dp"
                        android:background="@drawable/bg_menu_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/_10dp"
                        android:paddingBottom="@dimen/_10dp"
                        android:id="@+id/llDeals">
                        <ImageView
                            android:layout_width="@dimen/_50dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:id="@+id/imgDeals"
                            android:src="@drawable/img_tag_selector"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/deals"
                            android:textColor="@drawable/text_selector"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_16sp"
                            android:maxLines="1"
                            android:layout_marginEnd="@dimen/_10dp"
                            android:id="@+id/tvDeals"
                            android:visibility="gone"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40dp"
                        android:background="@drawable/bg_menu_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/_10dp"
                        android:paddingBottom="@dimen/_10dp"
                        android:id="@+id/llCategories">
                        <ImageView
                            android:layout_width="@dimen/_50dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:id="@+id/imgCategories"
                            android:src="@drawable/img_categories_selector"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/categories_meals_extras"
                            android:textColor="@drawable/text_selector"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_16sp"
                            android:id="@+id/tvCategories"
                            android:maxLines="1"
                            android:layout_marginEnd="@dimen/_10dp"
                            android:visibility="gone"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40dp"
                        android:background="@drawable/bg_menu_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/_10dp"
                        android:paddingBottom="@dimen/_10dp"
                        android:id="@+id/llTransactions">
                        <ImageView
                            android:layout_width="@dimen/_50dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:id="@+id/imgTransactions"
                            android:src="@drawable/img_transaction_selector"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/transactions"
                            android:textColor="@drawable/text_selector"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_16sp"
                            android:maxLines="1"
                            android:layout_marginEnd="@dimen/_10dp"
                            android:id="@+id/tvTransactions"
                            android:visibility="gone"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40dp"
                        android:background="@drawable/bg_menu_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/_10dp"
                        android:paddingBottom="@dimen/_10dp"
                        android:id="@+id/llInvoices">
                        <ImageView
                            android:layout_width="@dimen/_50dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:id="@+id/imgInvoices"
                            android:src="@drawable/img_invoices_selector"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/invoices"
                            android:textColor="@drawable/text_selector"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_16sp"
                            android:id="@+id/tvInvoices"
                            android:maxLines="1"
                            android:layout_marginEnd="@dimen/_10dp"
                            android:visibility="gone"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40dp"
                        android:background="@drawable/bg_menu_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/_10dp"
                        android:paddingBottom="@dimen/_10dp"
                        android:id="@+id/llSettings">
                        <ImageView
                            android:layout_width="@dimen/_50dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:id="@+id/imgSettings"
                            android:src="@drawable/img_settings_selector"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings"
                            android:textColor="@drawable/text_selector"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_16sp"
                            android:maxLines="1"
                            android:layout_marginEnd="@dimen/_10dp"
                            android:id="@+id/tvSettings"
                            android:visibility="gone"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40dp"
                        android:background="@drawable/bg_menu_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/_10dp"
                        android:paddingBottom="@dimen/_10dp"
                        android:id="@+id/llReports">
                        <ImageView
                            android:layout_width="@dimen/_50dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:id="@+id/imgReports"
                            android:src="@drawable/img_reports_selector"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/reports"
                            android:textColor="@drawable/text_selector"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_16sp"
                            android:maxLines="1"
                            android:layout_marginEnd="@dimen/_10dp"
                            android:id="@+id/tvReports"
                            android:visibility="gone"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40dp"
                        android:background="@drawable/bg_menu_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/_10dp"
                        android:paddingBottom="@dimen/_10dp"
                        android:id="@+id/llHelp">
                        <ImageView
                            android:layout_width="@dimen/_50dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:id="@+id/imgHelp"
                            android:src="@drawable/img_help_selector"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/help"
                            android:textColor="@drawable/text_selector"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_16sp"
                            android:maxLines="1"
                            android:layout_marginEnd="@dimen/_10dp"
                            android:id="@+id/tvHelp"
                            android:visibility="gone"
                            />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frame"
            android:elevation="@dimen/_2dp"
            />

        <FrameLayout
            android:layout_width="@dimen/_24dp"
            android:layout_height="@dimen/_48dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_btn_drawer"
            android:elevation="@dimen/_6dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/llDrawer"
            android:id="@+id/btnDrawer">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow"
                android:id="@+id/imgArrow"
                android:layout_gravity="center"
                />
        </FrameLayout>
    </android.support.constraint.ConstraintLayout>

</layout>