<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_60dp">


    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="@dimen/_20dp"
        android:paddingEnd="@dimen/_20dp"
        android:layout_marginStart="@dimen/_180dp"
        android:layout_marginEnd="@dimen/_180dp"
        android:orientation="vertical"
        android:background="@drawable/bg_lang_dialog">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20sp"
            android:layout_marginTop="@dimen/_40dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/cairo_semibold"
            android:layout_gravity="center"
            android:text="@string/change_language"
            />
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:paddingStart="@dimen/_10dp"
            android:paddingEnd="@dimen/_20dp"
            android:layout_marginTop="@dimen/_50dp"
            android:background="@color/bgColorHome"
            android:id="@+id/clEnglish">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="@string/english"
                android:gravity="center"
                android:textSize="@dimen/_20sp"
                android:fontFamily="@font/cairo_semibold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/tvPotuguese"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/rbEn"
                android:buttonTint="@color/orange"
                android:clickable="false"
                app:layout_constraintTop_toTopOf="@+id/tvPotuguese"
                app:layout_constraintBottom_toBottomOf="@+id/tvPotuguese"
                />
        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:paddingStart="@dimen/_10dp"
            android:paddingEnd="@dimen/_20dp"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@color/bgColorHome"
            android:layout_marginBottom="@dimen/_40dp"
            android:id="@+id/clArabic">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="@string/arabic"
                android:gravity="center"
                android:textSize="@dimen/_20sp"
                android:fontFamily="@font/cairo_semibold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/tvArabic"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/rbAr"
                android:buttonTint="@color/orange"
                android:clickable="false"
                app:layout_constraintTop_toTopOf="@+id/tvArabic"
                app:layout_constraintBottom_toBottomOf="@+id/tvArabic"
                />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
    
</android.support.constraint.ConstraintLayout>
</layout>