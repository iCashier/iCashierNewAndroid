<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10dp"
            android:elevation="@dimen/_2dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginStart="@dimen/_250dp"
            android:layout_marginEnd="@dimen/_250dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_40dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30dp"
                            android:drawablePadding="@dimen/_10dp"
                            android:drawableStart="@drawable/icon_title"
                            android:fontFamily="@font/cairo_semibold"
                            android:gravity="center_vertical"
                            android:text="@string/tittle"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30dp"
                            android:layout_marginTop="@dimen/_15dp"
                            android:drawablePadding="@dimen/_15dp"
                            android:drawableStart="@drawable/icon_filter"
                            android:fontFamily="@font/cairo_semibold"
                            android:gravity="center_vertical"
                            android:text="@string/type"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30dp"
                            android:layout_marginTop="@dimen/_15dp"
                            android:drawablePadding="@dimen/_10dp"
                            android:drawableStart="@drawable/cash_small"
                            android:fontFamily="@font/cairo_semibold"
                            android:gravity="center_vertical"
                            android:text="@string/price_label"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/etTittle"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30dp"
                            android:background="@drawable/bg_et_border"
                            android:fontFamily="@font/cairo_light"
                            android:inputType="textCapWords|text"
                            android:maxLines="1"
                            android:maxLength="20"
                            android:paddingBottom="@dimen/_2dp"
                            android:paddingEnd="@dimen/_15dp"
                            android:paddingStart="@dimen/_15dp"
                            android:paddingTop="@dimen/_2dp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_16sp" />

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30dp"
                            android:layout_marginTop="@dimen/_15dp">
                            <TextView
                                android:id="@+id/tvType"
                                android:layout_width="@dimen/_250dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_et_border"
                                android:fontFamily="@font/cairo_light"
                                android:inputType="textCapWords|text"
                                android:maxLines="1"
                                android:gravity="center_vertical"
                                android:text="@string/radio_button"
                                android:paddingEnd="@dimen/_15dp"
                                android:paddingStart="@dimen/_15dp"
                                app:layout_constraintStart_toStartOf="parent"
                                android:drawableEnd="@drawable/icon_dropdown"
                                android:textAlignment="viewStart"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/_16sp" />

                        </android.support.constraint.ConstraintLayout>

                        <EditText
                            android:id="@+id/etPrice"
                            android:layout_width="@dimen/_250dp"
                            android:layout_height="@dimen/_30dp"
                            android:background="@drawable/bg_et_border"
                            android:fontFamily="@font/cairo_light"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:layout_marginTop="@dimen/_15dp"
                            android:paddingBottom="@dimen/_2dp"
                            android:paddingEnd="@dimen/_15dp"
                            android:paddingStart="@dimen/_15dp"
                            android:paddingTop="@dimen/_2dp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_16sp" />


                    </LinearLayout>
                </LinearLayout>
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40dp">
                    <TextView
                        android:layout_width="@dimen/_100dp"
                        android:layout_height="@dimen/_40dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="@string/cancel"
                        android:background="@drawable/bg_btn_red"
                        android:textSize="@dimen/_16sp"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/cairo_semibold"
                        android:id="@+id/tvCancel"
                        />

                    <TextView
                        android:layout_width="@dimen/_100dp"
                        android:layout_height="@dimen/_40dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="@string/update"
                        android:gravity="center"
                        app:layout_constraintEnd_toStartOf="@+id/tvCancel"
                        android:textSize="@dimen/_16sp"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/bg_btn_red"
                        android:fontFamily="@font/cairo_semibold"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:layout_marginStart="@dimen/_20dp"
                        android:id="@+id/tvUpdate"
                        />
                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>
</layout>