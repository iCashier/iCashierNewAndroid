<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/clParentLayout"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10dp"
            android:elevation="@dimen/_2dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginStart="@dimen/_250dp"
            android:layout_marginEnd="@dimen/_250dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_40dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/llTakeOut"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="@string/select_name"
                        android:fontFamily="@font/cairo_semibold"
                        android:textSize="@dimen/_18sp"
                        />
                    <EditText
                        android:id="@+id/etItem"
                        android:layout_width="@dimen/_200dp"
                        android:layout_height="@dimen/_30dp"
                        android:background="@drawable/bg_et_border"
                        android:fontFamily="@font/cairo_light"
                        android:inputType="textCapWords|text"
                        android:layout_marginTop="@dimen/_20dp"
                        android:layout_marginStart="@dimen/_20dp"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/_2dp"
                        android:paddingEnd="@dimen/_15dp"
                        android:paddingStart="@dimen/_15dp"
                        android:paddingTop="@dimen/_2dp"
                        android:textAlignment="viewStart"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_16sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="@string/select_payment"
                        android:fontFamily="@font/cairo_semibold"
                        android:textSize="@dimen/_18sp"
                        android:layout_marginTop="@dimen/_30dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_30dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/llCreditCard"
                            android:layout_marginStart="@dimen/_20dp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:id="@+id/imgCreditCard"
                                android:src="@drawable/credit_card_selector"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/credit_card"
                                android:textSize="@dimen/_16sp"
                                android:layout_marginTop="@dimen/_10dp"
                                android:textColor="@color/colorBlack"
                                android:fontFamily="@font/cairo_semibold"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_40dp"
                            android:layout_marginEnd="@dimen/_40dp"
                            android:id="@+id/llCash"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:id="@+id/imgCash"
                                android:src="@drawable/cash_selector"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cash"
                                android:textSize="@dimen/_16sp"
                                android:layout_marginTop="@dimen/_10dp"
                                android:textColor="@color/colorBlack"
                                android:fontFamily="@font/cairo_semibold"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/llPaypal"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:id="@+id/imgPaypal"
                                android:src="@drawable/paypal_selector"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/paypal"
                                android:textSize="@dimen/_16sp"
                                android:layout_marginTop="@dimen/_10dp"
                                android:textColor="@color/colorBlack"
                                android:fontFamily="@font/cairo_semibold"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40dp">
                    <TextView
                        android:layout_width="@dimen/_100dp"
                        android:layout_height="@dimen/_40dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="@string/cancel"
                        android:textSize="@dimen/_16sp"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/bg_btn_red"
                        android:fontFamily="@font/cairo_semibold"
                        android:id="@+id/tvCancel"
                        />
                    <TextView
                        android:layout_width="@dimen/_100dp"
                        android:layout_height="@dimen/_40dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="@string/update"
                        app:layout_constraintEnd_toStartOf="@+id/tvCancel"
                        android:textSize="@dimen/_16sp"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/bg_btn_red"
                        android:fontFamily="@font/cairo_semibold"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:layout_marginStart="@dimen/_20dp"
                        android:id="@+id/tvUpdate"
                        />
                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:elevation="@dimen/_2dp"
            android:background="@color/dim_color">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:progressTint="@color/orange"
                android:indeterminateTint="@color/orange"
                />
        </FrameLayout>
    </android.support.constraint.ConstraintLayout>
</layout>