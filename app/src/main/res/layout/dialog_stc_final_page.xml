<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="@dimen/_320dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/app_icon" />
        </LinearLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_margin="@dimen/_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/dll_ImgIndicator"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20dp"
                    android:background="@drawable/icon_cross"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/dimg_tick"
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:src="@drawable/icon_tick"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/_18sp"
                        android:text="@string/price_sr"
                        android:fontFamily="@font/cairo_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/stxt_amount"
                        android:layout_marginStart="@dimen/_5dp"
                        android:textSize="@dimen/_18sp"
                        android:text="100.00"
                        android:fontFamily="@font/cairo_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/dtxt_paySuccess"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_5dp"
                    android:textSize="@dimen/_18sp"
                    android:hint="@string/payment_received"
                    android:fontFamily="@font/cairo_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/dtxt_billNo"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_5dp"
                    android:textSize="@dimen/_18sp"
                    android:hint="10CIAXX"
                    android:fontFamily="@font/cairo_semibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/dtxt_refNo"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_5dp"
                    android:textSize="@dimen/_18sp"
                    android:hint="10CIAXX"
                    android:fontFamily="@font/cairo_semibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/dtxt_Msg"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_5dp"
                    android:textSize="@dimen/_18sp"
                    android:hint="@string/paytabs_msg_payment_in_progress"
                    android:fontFamily="@font/cairo_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>



                <Button
                    android:id="@+id/dbtnOk"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:textAllCaps="true"
                    android:fontFamily="@font/cairo_semibold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18sp"
                    android:text="@string/ok"
                    android:background="@drawable/bg_orange_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </Button>


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>




</LinearLayout>
</layout>