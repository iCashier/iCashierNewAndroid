<?xml version="1.0" encoding="utf-8"?>
<layout>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/_400dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_frame"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_50dp"
            android:paddingEnd="@dimen/_30dp"
            android:paddingTop="@dimen/_20dp"
            android:paddingStart="@dimen/_30dp"
            android:paddingBottom="@dimen/_20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30dp"
                android:drawablePadding="@dimen/_10dp"
                android:fontFamily="@font/cairo_semibold"
                android:gravity="center_vertical"
                android:text="@string/taxes"
                android:textColor="@color/colorBlack"
                android:drawableStart="@drawable/icon_taxes"
                android:textSize="@dimen/_16sp" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_height="@dimen/_200dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:id="@+id/rvTaxes">

            </android.support.v7.widget.RecyclerView>

            <Button
                android:layout_width="@dimen/_80dp"
                android:layout_height="@dimen/_30dp"
                android:background="@drawable/bg_red_btn"
                android:text="@string/cancel"
                android:textColor="@color/colorWhite"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_10dp"
                android:id="@+id/btnCancel"
                android:textSize="@dimen/_16sp"
                />
        </LinearLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:progressTint="@color/orange"
            android:indeterminateTint="@color/orange"
            android:id="@+id/progressBar"
            android:visibility="gone"
            />
    </FrameLayout>
</layout>