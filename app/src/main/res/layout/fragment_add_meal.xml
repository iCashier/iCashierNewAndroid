<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/llMeals"
        android:visibility="visible"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_40dp"
            android:layout_marginStart="@dimen/_40dp"
            android:layout_marginTop="@dimen/_40dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30dp"
                    android:drawablePadding="@dimen/_10dp"
                    android:drawableStart="@drawable/icon_title"
                    android:fontFamily="@font/cairo_semibold"
                    android:gravity="center_vertical"
                    android:text="@string/tittle"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etTittle"
                    android:layout_width="@dimen/_0dp"
                    android:layout_weight="2.5"
                    android:layout_height="@dimen/_30dp"
                    android:background="@drawable/bg_et_border"
                    android:fontFamily="@font/cairo_light"
                    android:layout_marginEnd="@dimen/_50dp"
                    android:inputType="textCapWords|text"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_2dp"
                    android:paddingEnd="@dimen/_15dp"
                    android:paddingStart="@dimen/_15dp"
                    android:paddingTop="@dimen/_2dp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_16sp" />
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/clLogo"
                    android:layout_width="@dimen/_0dp"
                    android:layout_weight="0.8"
                    android:layout_height="@dimen/_80dp"
                    android:layout_marginStart="@dimen/_80dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_15dp"
                        android:layout_marginStart="@dimen/_15dp"
                        android:background="@drawable/bg_document_image"
                        android:padding="@dimen/_1dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/imgLogo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/placeholder_logo" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgCamera1"
                        android:layout_width="@dimen/_38dp"
                        android:layout_height="@dimen/_38dp"
                        android:elevation="@dimen/_2dp"
                        android:src="@drawable/icon_photo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_40dp"
            android:layout_marginStart="@dimen/_40dp"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30dp"
                    android:drawablePadding="@dimen/_15dp"
                    android:drawableStart="@drawable/cash_small"
                    android:fontFamily="@font/cairo_semibold"
                    android:gravity="center_vertical"
                    android:text="@string/price_label"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:drawablePadding="@dimen/_10dp"
                    android:drawableStart="@drawable/tea"
                    android:fontFamily="@font/cairo_semibold"
                    android:gravity="center_vertical"
                    android:text="@string/items_label"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical">



                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30dp">
                    <EditText
                        android:id="@+id/etPrice"
                        android:layout_width="@dimen/_200dp"
                        android:layout_height="@dimen/_30dp"
                        android:background="@drawable/bg_et_border"
                        android:fontFamily="@font/cairo_light"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/_2dp"
                        android:paddingEnd="@dimen/_15dp"
                        android:paddingStart="@dimen/_15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:paddingTop="@dimen/_2dp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_16sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="@dimen/_16sp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/cairo_regular"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/tvTotalPrice"
                        android:visibility="gone"
                        android:text="Total price of selected items: SR 140.00"
                        />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:padding="@dimen/_10dp"
                    android:background="@drawable/bg_et_border">
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_25dp"
                        android:id="@+id/rvItems"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_plus_2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/imgAddItem"
                        />

                </android.support.constraint.ConstraintLayout>


            </LinearLayout>
        </LinearLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70dp"
            android:layout_marginTop="@dimen/_5dp">

            <FrameLayout
                android:id="@+id/flSave"
                android:layout_width="@dimen/_60dp"
                android:layout_height="@dimen/_60dp"
                android:background="@drawable/bg_circle_red"
                android:elevation="@dimen/_3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="@dimen/_30dp"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_save" />
            </FrameLayout>
        </android.support.constraint.ConstraintLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/existing_meals"
            android:layout_marginStart="@dimen/_50dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_18sp"
            android:visibility="gone"
            android:id="@+id/tvExistingMeals"
            android:fontFamily="@font/cairo_semibold"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">
                <ExpandableListView
                    android:id="@+id/lvExpMeals"
                    android:nestedScrollingEnabled="false"
                    android:layout_height="@dimen/_200dp"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_50dp"
                    android:layout_marginEnd="@dimen/_40dp"
                    android:divider="@null"
                    />
            </LinearLayout>

        </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>