<?xml version="1.0" encoding="utf-8"?>
<layout>
<android.support.constraint.ConstraintLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/clParentLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_15dp"
        android:layout_marginEnd="@dimen/_15dp"
        android:layout_marginTop="@dimen/_15dp"
        android:layout_marginStart="@dimen/_65dp"
        android:background="@drawable/bg_frame"
        android:elevation="@dimen/_2dp"
        android:padding="@dimen/_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_40dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_30dp"
                android:orientation="horizontal">

                <!--layout for dinein tab-->
                <LinearLayout
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/llDineIn"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:layout_weight="3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="@string/select_table"
                        android:fontFamily="@font/cairo_semibold"
                        android:textSize="@dimen/_18sp"
                        android:layout_marginTop="@dimen/_10dp"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/etTable"
                            android:layout_width="@dimen/_200dp"
                            android:layout_height="@dimen/_30dp"
                            android:maxLength="10"
                            android:background="@drawable/bg_et_border"
                            android:fontFamily="@font/cairo_light"
                            android:inputType="textCapWords|text"
                            android:layout_marginTop="@dimen/_20dp"
                            android:layout_marginStart="@dimen/_20dp"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:paddingBottom="@dimen/_2dp"
                            android:paddingEnd="@dimen/_15dp"
                            android:paddingStart="@dimen/_15dp"
                            android:paddingTop="@dimen/_2dp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_16sp" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="@string/select_payment"
                        android:fontFamily="@font/cairo_semibold"
                        android:textSize="@dimen/_18sp"
                        android:layout_marginTop="@dimen/_80dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_50dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/llCreditCard"
                            android:layout_marginStart="@dimen/_20dp"
                            android:visibility="gone"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:id="@+id/imgCreditCard"
                                android:src="@drawable/credit_card_selector"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/credit_card"
                                android:textSize="@dimen/_16sp"
                                android:layout_marginTop="@dimen/_10dp"
                                android:textColor="@color/colorBlack"
                                android:fontFamily="@font/cairo_semibold"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_40dp"
                            android:layout_marginEnd="@dimen/_40dp"
                            android:id="@+id/llCash"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:id="@+id/imgCash"
                                android:src="@drawable/cash_selector"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cash"
                                android:textSize="@dimen/_16sp"
                                android:layout_marginTop="@dimen/_10dp"
                                android:textColor="@color/colorBlack"
                                android:fontFamily="@font/cairo_semibold"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:id="@+id/llPaypal"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:id="@+id/imgPaypal"
                                android:src="@drawable/paypal_selector"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/paypal"
                                android:textSize="@dimen/_16sp"
                                android:layout_marginTop="@dimen/_10dp"
                                android:textColor="@color/colorBlack"
                                android:fontFamily="@font/cairo_semibold"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
                <!--end of layout for dinein tab-->



                <LinearLayout
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1.5">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:text="Your Code:"
                            android:layout_gravity="center"
                            android:fontFamily="@font/cairo_semibold"
                            android:textSize="@dimen/_18sp"
                            android:layout_marginTop="@dimen/_80dp"
                            />

                        <ImageView
                            android:layout_width="@dimen/_140dp"
                            android:layout_height="@dimen/_140dp"
                            android:layout_marginTop="@dimen/_20dp"
                            android:background="@drawable/def_user"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:text="Order #T009"
                            android:layout_gravity="center"
                            android:fontFamily="@font/cairo_semibold"
                            android:textSize="@dimen/_16sp"
                            android:layout_marginTop="@dimen/_20dp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/share"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_20dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="@dimen/_70dp"
        android:layout_height="@dimen/_70dp"
        android:background="@drawable/bg_circle_red"
        android:elevation="@dimen/_3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/_5dp"
        android:id="@+id/flSave"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_save"
            />
    </FrameLayout>
</android.support.constraint.ConstraintLayout>
</layout>