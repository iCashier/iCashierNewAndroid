                                android:layout_height="@dimen/_30dp">
                                <ImageView
                                    android:layout_width="@dimen/_0dp"
                                    android:layout_weight="0.2"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:paddingTop="@dimen/_3dp"
                                    android:paddingBottom="@dimen/_3dp"
                                    android:paddingStart="@dimen/_3dp"
                                    android:paddingEnd="@dimen/_3dp"
                                    android:src="@drawable/icon_title"
                                    />
                                <TextView
                                    android:layout_width="@dimen/_0dp"
                                    android:layout_height="@dimen/_30dp"
                                    android:layout_weight="1"
                                    android:drawablePadding="@dimen/_10dp"
                                    android:fontFamily="@font/cairo_semibold"
                                    android:gravity="center_vertical"
                                    android:text="@string/deal_title"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/colorBlack"
                                    android:paddingStart="@dimen/_5dp"
                                    android:textSize="@dimen/_16sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_10dp"
                                android:layout_height="@dimen/_30dp">
                                <ImageView
                                    android:layout_width="@dimen/_0dp"
                                    android:layout_weight="0.2"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical|start"
                                    android:paddingTop="@dimen/_3dp"
                                    android:paddingBottom="@dimen/_3dp"
                                    android:paddingStart="@dimen/_3dp"
                                    android:paddingEnd="@dimen/_3dp"
                                    android:src="@drawable/cash_small"
                                    />
                                <TextView
                                    android:layout_width="@dimen/_0dp"
                                    android:layout_height="@dimen/_30dp"
                                    android:layout_weight="1"
                                    android:drawablePadding="@dimen/_10dp"
                                    android:fontFamily="@font/cairo_semibold"
                                    android:gravity="center_vertical"
                                    android:text="@string/price_sr_label"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/_16sp" />
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="@dimen/_0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="3">
                            <EditText
                                android:id="@+id/etTittle"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30dp"
                                android:background="@drawable/bg_et_border"
                                android:fontFamily="@font/cairo_light"
                                android:layout_marginEnd="@dimen/_50dp"
                                android:inputType="textCapWords|text"
                                android:maxLines="1"
                                android:paddingBottom="@dimen/_2dp"
                                android:paddingEnd="@dimen/_15dp"
                                android:paddingStart="@dimen/_15dp"
                                android:paddingTop="@dimen/_2dp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/_16sp" />
                            <EditText
                                android:id="@+id/etPrice"
                                android:layout_marginTop="@dimen/_10dp"
                                android:layout_width="@dimen/_150dp"
                                android:layout_height="@dimen/_30dp"
                                android:background="@drawable/bg_et_border"
                                android:fontFamily="@font/cairo_light"
                                android:inputType="numberDecimal"
                                android:gravity="center_vertical|start"
                                android:maxLines="1"
                                android:paddingEnd="@dimen/_15dp"
                                android:paddingStart="@dimen/_15dp"
                                android:nextFocusDown="@+id/etMoreThan"
                                android:textAlignment="viewStart"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/_16sp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="@dimen/_0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <android.support.constraint.ConstraintLayout
                                android:id="@+id/clLogo"
                                android:layout_width="@dimen/_0dp"
                                android:layout_weight="0.8"
                                android:layout_height="@dimen/_100dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="@dimen/_15dp"
                                    android:layout_marginStart="@dimen/_15dp"
                                    android:background="@drawable/bg_document_image"
                                    android:padding="@dimen/_1dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageView
                                        android:id="@+id/imgLogo"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/placeholder_logo" />

                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/imgCamera1"
                                    android:layout_width="@dimen/_38dp"
                                    android:layout_height="@dimen/_38dp"
                                    android:elevation="@dimen/_2dp"
                                    android:src="@drawable/icon_photo"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent" />

                            </android.support.constraint.ConstraintLayout>
                        </LinearLayout>
