<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_15dp"
        android:layout_marginBottom="@dimen/_15dp"
        android:layout_marginStart="@dimen/_65dp"
        android:layout_marginEnd="@dimen/_15dp"
        android:background="@drawable/bg_frame"
        android:padding="@dimen/_5dp"
        android:elevation="@dimen/_2dp">


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
        <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clParentLayout"
            android:background="@color/colorWhite">
            <FrameLayout
                android:layout_width="@dimen/_55dp"
                android:layout_height="@dimen/_55dp"
                app:layout_constraintTop_toTopOf="@+id/cardHeader"
                app:layout_constraintBottom_toBottomOf="@id/cardHeader"
                android:layout_marginStart="@dimen/_40dp"
                app:layout_constraintStart_toStartOf="parent"
                android:elevation="@dimen/_5dp"
                android:id="@+id/flBack"
                android:background="@drawable/bg_circle_orange">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_back"
                    android:layout_gravity="center"
                    />
            </FrameLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45dp"
                app:cardCornerRadius="@dimen/_25dp"
                android:layout_marginStart="@dimen/_50dp"
                android:layout_marginEnd="@dimen/_50dp"
                android:layout_marginTop="@dimen/_20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/cardHeader"
                android:elevation="@dimen/_5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reset_password"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_20sp"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="@dimen/_60dp"
                    android:fontFamily="@font/cairo_semibold"
                    />
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="@dimen/_280dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardHeader"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_password"
                    android:layout_marginTop="@dimen/_40dp"
                    android:layout_gravity="center"
                    />

                <EditText
                    android:layout_width="@dimen/_280dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_marginTop="@dimen/_40dp"
                    android:background="@drawable/bg_field"
                    android:hint="@string/enter_old_password"
                    android:textDirection="anyRtl"
                    android:paddingStart="@dimen/_20dp"
                    android:gravity="center"
                    android:id="@+id/etOldPassword"
                    android:textColor="@color/textColor"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:fontFamily="@font/cairo_regular" />
                <EditText
                    android:layout_width="@dimen/_280dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:background="@drawable/bg_field"
                    android:hint="@string/enter_new_password"
                    android:paddingStart="@dimen/_20dp"
                    android:textDirection="anyRtl"
                    android:id="@+id/etNewPass"
                    android:textColor="@color/textColor"
                    android:maxLines="1"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:fontFamily="@font/cairo_regular"
                    />
                <EditText
                    android:layout_width="@dimen/_280dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:background="@drawable/bg_field"
                    android:hint="@string/confrim_new_password"
                    android:textDirection="anyRtl"
                    android:paddingStart="@dimen/_20dp"
                    android:gravity="center"
                    android:id="@+id/etConfirmPass"
                    android:textColor="@color/textColor"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:fontFamily="@font/cairo_regular"
                    />

                <Button
                    android:layout_width="@dimen/_120dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_btn_red"
                    android:layout_marginTop="@dimen/_60dp"
                    android:text="@string/submit"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_18sp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:id="@+id/btnSubmit"
                    android:elevation="@dimen/_5dp"
                    android:fontFamily="@font/cairo_semibold"
                    />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>
    </FrameLayout>

</FrameLayout>
</layout>