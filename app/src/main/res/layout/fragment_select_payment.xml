<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/clParentLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_15dp"
        android:layout_marginBottom="@dimen/_15dp"
        android:layout_marginStart="@dimen/_65dp"
        android:layout_marginEnd="@dimen/_15dp"
        android:orientation="vertical"
        android:background="@drawable/bg_frame"
        android:elevation="@dimen/_2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_tab_grey">
            <LinearLayout
                android:id="@+id/tabDineIn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_20dp"
                android:paddingEnd="@dimen/_10dp"
                android:background="@drawable/bg_tab_selector">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_resturent"
                    android:layout_gravity="center_vertical" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dine in"
                    android:paddingStart="@dimen/_10dp"
                    android:textSize="@dimen/_16sp"
                    android:textColor="@drawable/text_selector"
                    android:layout_gravity="center"
                    android:paddingEnd="@dimen/_10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tabTakeOut"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/bg_tab_selector"
                android:layout_marginStart="@dimen/_10dp"
                android:paddingStart="@dimen/_10dp"
                android:paddingEnd="@dimen/_10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_burger_black"
                    android:layout_gravity="center_vertical" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Take Out"
                    android:paddingStart="@dimen/_10dp"
                    android:textSize="@dimen/_16sp"
                    android:textColor="@drawable/text_selector"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/_10dp"
                    android:paddingEnd="@dimen/_10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tabItems"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_10dp"
                android:paddingStart="@dimen/_10dp"
                android:background="@drawable/bg_tab_selector"
                android:paddingEnd="@dimen/_10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_burger_black"
                    android:layout_gravity="center_vertical" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Items"
                    android:paddingStart="@dimen/_10dp"
                    android:textSize="@dimen/_16sp"
                    android:textColor="@drawable/text_selector"
                    android:layout_gravity="center"
                    android:paddingEnd="@dimen/_10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tabCodes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/bg_tab_selector"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:paddingStart="@dimen/_10dp"
                android:paddingEnd="@dimen/_10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_code_selector"
                    android:layout_gravity="center_vertical" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Codes"
                    android:paddingStart="@dimen/_10dp"
                    android:textSize="@dimen/_16sp"
                    android:textColor="@drawable/text_selector"
                    android:layout_gravity="center"
                    android:paddingEnd="@dimen/_10dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50dp"
            android:layout_marginStart="@dimen/_30dp"
            android:layout_marginEnd="@dimen/_30dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="Select Payment:"
                    android:fontFamily="@font/cairo_regular"
                    android:textSize="@dimen/_18sp"
                    android:layout_marginTop="@dimen/_10dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40dp"
                    android:layout_marginStart="@dimen/_20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="@dimen/_80dp"
                            android:layout_height="@dimen/_80dp"
                            android:background="@drawable/bg_payment_selector">

                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:text="Credit Card"
                            android:layout_gravity="center"
                            android:fontFamily="@font/cairo_regular"
                            android:textSize="@dimen/_16sp"
                            android:layout_marginTop="@dimen/_10dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/_40dp"
                        android:layout_marginEnd="@dimen/_40dp"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="@dimen/_80dp"
                            android:layout_height="@dimen/_80dp"
                            android:background="@drawable/bg_payment_selector">

                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:text="Cash"
                            android:layout_gravity="center"
                            android:fontFamily="@font/cairo_regular"
                            android:textSize="@dimen/_16sp"
                            android:layout_marginTop="@dimen/_10dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="@dimen/_80dp"
                            android:layout_height="@dimen/_80dp"
                            android:background="@drawable/bg_payment_selector">

                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:text="PayPal"
                            android:layout_gravity="center"
                            android:fontFamily="@font/cairo_regular"
                            android:textSize="@dimen/_16sp"
                            android:layout_marginTop="@dimen/_10dp"
                            />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="@dimen/_50dp"
        android:layout_height="@dimen/_50dp"
        android:background="@drawable/bg_circle_red"
        android:elevation="@dimen/_3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/_5dp"
        android:id="@+id/flSave"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_save"
            />
    </FrameLayout>
</android.support.constraint.ConstraintLayout>