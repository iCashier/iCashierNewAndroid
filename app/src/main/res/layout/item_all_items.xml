<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:paddingBottom="@dimen/_5dp"
        >


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/clParentLayout"
            android:background="@drawable/bg_code_item_selector">


            <ImageView
                android:layout_width="@dimen/_18dp"
                android:layout_height="@dimen/_18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/_15dp"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/imgType"
                />
            <TextView
                android:layout_width="@dimen/_100dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/imgType"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/colorBlack"
                android:textAlignment="viewStart"
                android:layout_marginStart="@dimen/_5dp"
                android:id="@+id/tvOrderNo"
                android:text="T008"
                android:textSize="@dimen/_16sp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_100dp"
                app:layout_constraintStart_toEndOf="@+id/tvOrderNo"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_18dp"
                    android:layout_height="@dimen/_18dp"
                    android:layout_gravity="center"
                    android:src="@drawable/credit_card_small"
                    android:id="@+id/imgCreditCard"
                    android:layout_marginEnd="@dimen/_10dp"

                    />
                <ImageView
                    android:layout_width="@dimen/_18dp"
                    android:layout_height="@dimen/_18dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tvOrderNo"
                    android:id="@+id/imgCash"
                    android:layout_gravity="center"
                    android:src="@drawable/cash_small"
                    android:layout_marginEnd="@dimen/_10dp"
                    />
                <ImageView
                    android:layout_width="@dimen/_18dp"
                    android:layout_height="@dimen/_18dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tvOrderNo"
                    android:id="@+id/imgPaypal"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:src="@drawable/paypal_small"
                    />

                <ImageView
                    android:layout_width="@dimen/_18dp"
                    android:layout_height="@dimen/_18dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="@dimen/_5dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    app:layout_constraintStart_toEndOf="@+id/imgPaymentMode"
                    android:id="@+id/imgDelivey"
                    android:layout_gravity="center"
                    android:src="@drawable/delivery"
                    />
                <ImageView
                    android:layout_width="@dimen/_18dp"
                    android:layout_height="@dimen/_18dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="@dimen/_5dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    app:layout_constraintStart_toEndOf="@+id/imgPaymentMode"
                    android:id="@+id/imgPickup"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_takeout"
                    />
                <ImageView
                    android:layout_width="@dimen/_18dp"
                    android:layout_height="@dimen/_18dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="@dimen/_5dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    app:layout_constraintStart_toEndOf="@+id/imgPaymentMode"
                    android:id="@+id/imgSwiftDelivery"
                    android:layout_gravity="center"
                    android:src="@drawable/insta_delivery"
                    />
                <ImageView
                    android:layout_width="@dimen/_18dp"
                    android:layout_height="@dimen/_18dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="@dimen/_5dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    app:layout_constraintStart_toEndOf="@+id/imgPaymentMode"
                    android:id="@+id/imgInstaDelivery"
                    android:layout_gravity="center"
                    android:src="@drawable/swift_delivery"
                    />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/delete"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:id="@+id/imgDelete"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toStartOf="@+id/imgDelete"
                android:src="@drawable/edit"
                android:padding="@dimen/_10dp"
                android:id="@+id/imgEdit"
                />

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</layout>