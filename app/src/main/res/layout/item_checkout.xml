<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5dp"

        android:orientation="vertical">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35dp"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_marginTop="@dimen/_10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_secondary_category"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="@dimen/_0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <FrameLayout
                    android:layout_width="@dimen/_35dp"
                    android:layout_height="@dimen/_35dp"
                    android:padding="@dimen/_2dp"
                    android:background="@drawable/bg_turkish_green_circle">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/def_user"
                        android:id="@+id/imgItem"
                        />
                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|start"
                    android:layout_marginStart="@dimen/_5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_16sp"
                    android:textAlignment="viewStart"
                    android:fontFamily="@font/cairo_regular"
                    android:text="Item name"
                    android:id="@+id/tvItemName"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_16sp"
                    android:fontFamily="@font/cairo_regular"
                    android:text="Item name"
                    android:id="@+id/tvItemPrice"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_16sp"
                    android:fontFamily="@font/cairo_regular"
                    android:text="L"
                    android:id="@+id/tvItemSize"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_16sp"
                    android:fontFamily="@font/cairo_regular"
                    android:text="5"
                    android:id="@+id/tvQuantity"
                    />
            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="@dimen/_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableEnd="@drawable/dropdown_black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_16sp"
                    android:fontFamily="@font/cairo_regular"
                    android:drawablePadding="@dimen/_5dp"
                    android:gravity="center"
                    android:text="5"
                    android:id="@+id/tvDropDown"
                    />

            </android.support.constraint.ConstraintLayout>



        </LinearLayout>
            <TextView
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:background="@drawable/bg_circle_red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="@dimen/_15dp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:id="@+id/tvReorderNo"
                android:textSize="@dimen/_14sp"
                android:fontFamily="@font/cairo_semibold"
                />
        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rvExtras"
            android:layout_marginStart="@dimen/_60dp"
            android:layout_marginEnd="@dimen/_50dp"
            android:padding="@dimen/_10dp"
            android:background="@drawable/bg_checkout_items">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
</layout>